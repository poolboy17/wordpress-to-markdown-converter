{
  "extends": "./tsconfig.json",
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "tests/**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "types": ["node", "jest"],
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false
  }
}